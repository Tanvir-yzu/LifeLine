[uwsgi]
# Django-related settings
chdir           = /opt/LifeLine
# Django's wsgi file
module          = LifeLine.wsgi:application
# the virtualenv (full path)
home            = /opt/LifeLine/venv
# process-related settings
master          = true
# maximum number of worker processes
processes       = 8
threads         = 2
enable-threads  = True
# the socket (use the full path to be safe)
socket          = /opt/LifeLine/uwsgi/uwsgi.sock
chmod-socket    = 666
# clear environment on exit
vacuum          = true
# respawning
harakiri        = 30
max-requests    = 5000

# increase buffer size
buffer-size     = 65535
listen          = 4096
                    